<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Page Heading
      <small>Secondary Text</small>
    </h1>
  </div>
</div>
<!-- /.row -->

{{#each trainings}}
  <div class="row">
    <div class="col-md-7">
      <a href="#">
        <img class="img-responsive" src="http://placehold.it/700x300" alt="">
      </a>
    </div>
    <div class="col-md-5">
      <h3>{{type}}</h3>
      <h4>{{dateFormat date}}</h4>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p>
      <a class="btn btn-primary" href="/training/{{_id}}">Details</a>
    </div>
  </div>

  <hr/>
{{/each}}

<!-- Pagination -->
<div class="row text-center">
  <div class="col-lg-12">
    <ul class="pagination">
      {{#paginate pagination type="first"}}
        <li><a href="?page={{n}}">&laquo;</a></li>
      {{/paginate}}
      {{#paginate pagination type="previous"}}
        <li><a href="?page={{n}}">&lsaquo;</a></li>
      {{/paginate}}
      {{#paginate pagination type="middle" limit="5"}}
        <li {{#if active}}class="active"{{/if}}><a href="?page={{n}}">{{n}}</a></li>
      {{/paginate}}
      {{#paginate pagination type="next"}}
        <li><a href="?page={{n}}">&rsaquo;</a></li>
      {{/paginate}}
      {{#paginate pagination type="last"}}
        <li><a href="?page={{n}}">&raquo;</a></li>
      {{/paginate}}
    </ul>
  </div>
</div>
<!-- /.row -->

<hr>